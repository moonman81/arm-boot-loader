@prefix : <http://example.org/arm-bootloader-opportunities#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Ontology for Bootloader Implementation Opportunities
<http://example.org/arm-bootloader-opportunities> a owl:Ontology ;
  rdfs:label "Bootloader Opportunities Ontology" .

# Classes
:Opportunity a owl:Class ;
  rdfs:label "Opportunity" ;
  rdfs:comment "Potential improvements" .

:Area a owl:Class ;
  rdfs:label "Area" ;
  rdfs:comment "Areas for opportunities" .

# Properties
:improvesArea a owl:ObjectProperty ;
  rdfs:domain :Opportunity ;
  rdfs:range :Area ;
  rdfs:label "improves Area" .

:hasFeasibility a owl:DatatypeProperty ;
  rdfs:domain :Opportunity ;
  rdfs:range xsd:string ;
  rdfs:label "has Feasibility" .

:hasBenefit a owl:DatatypeProperty ;
  rdfs:domain :Opportunity ;
  rdfs:range xsd:string ;
  rdfs:label "has Benefit" .

:description a owl:DatatypeProperty ;
  rdfs:domain :Opportunity ;
  rdfs:range xsd:string ;
  rdfs:label "description" .

# Instances - Areas
:Implementation a :Area ;
  rdfs:label "Implementation" .

:Testing a :Area ;
  rdfs:label "Testing" .

:Security a :Area ;
  rdfs:label "Security" .

:Filesystem a :Area ;
  rdfs:label "Filesystem Support" .

:Partitioning a :Area ;
  rdfs:label "Partition Table Support" .

:GPIO a :Area ;
  rdfs:label "GPIO Support" .

:USB a :Area ;
  rdfs:label "USB Support" .

:USBMSC a :Opportunity ;
  :improvesArea :USB ;
  :hasFeasibility "Completed" ;
  :hasBenefit "High" ;
  :description "Full USB Mass Storage Class implementation with device enumeration, SCSI command handling, and boot support" .

:IPv6NetworkStack a :Opportunity ;
  :improvesArea :Implementation ;
  :hasFeasibility "Completed" ;
  :hasBenefit "High" ;
